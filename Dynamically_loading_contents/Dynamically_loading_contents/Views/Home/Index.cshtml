@model IEnumerable<Dynamically_loading_contents.Models.tbl_employee>

<br />
<br />

<div class="container">

    <h3 style="text-align:center">***************  EMPLOYEE DETAILS  ***************</h3>

    <br />
    <br /><br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th style="width: 15%">ID</th>
            <th style="width: 25%">NAME</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.emp_id</td>

                <td><a href="" data-toggle="popover" data-trigger="hover" id="@item.emp_id">@item.emp_name</a></td>
            </tr>
        }

    </table>

</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script>
    $(document).ready(function () {
        $('[data-toggle="popover"]').popover({

            title: setData,
            html: true,
            placement: 'bottom'
        });

        function setData(id) {

            var set_data = '';
            var element = $(this);
            var id = element.attr("id");

            $.ajax({

                url: "/Home/tbl_employee?id" + id,
                method: "post",
                async: false,
                data: { id: id },
                success: function (data) {

                    set_data = data;
               }

            });

            return set_data;
        }

    });

</script>
